{
  "$schema": "http://schema.management.azure.com/schemas/2014-04-01-preview/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "variables": {
    "hostingPlanName": "[replace(resourceGroup().name,'.','')]",
    "siteName": "[concat(toLower(variables('hostingPlanName')), uniqueString(resourceGroup().id))]",
    "sku": "s1",
    "workerSize": "0",
    "repoURL": "https://github.com/4lowtherabbit/LabAppInit.git",
    "branch": "master"
  },
  "resources": [
    {
      "apiVersion": "2014-06-01",
      "name": "[variables('hostingPlanName')]",
      "type": "Microsoft.Web/serverFarms",
      "location": "[resourceGroup().location]",
      "properties": {
        "name": "[variables('hostingPlanName')]",
        "sku": "Standard",
        "workerSize": "0",
        "numberOfWorkers": 1
      }
    },
    {
      "apiVersion": "2018-02-01",
      "name": "[variables('siteName')]",
      "type": "Microsoft.Web/Sites",
      "location": "[resourceGroup().location]",
      "dependsOn": [
        "[concat('Microsoft.Web/serverFarms/', variables('hostingPlanName'))]"
      ],
      "tags": {
        "[concat('hidden-related:', resourceGroup().id, '/providers/Microsoft.Web/serverfarms/', variables('hostingPlanName'))]": "empty"
      },
      "properties": {
        "name": "[variables('siteName')]",
        "serverFarm": null,
	"serverFarmId": "[resourceId('Microsoft.Web/serverFarms', variables('hostingPlanName'))]"
      },
      "resources": [
        {
          "apiVersion": "2018-02-01",
          "type": "config",
          "name": "web",
          "dependsOn": [
            "[concat('Microsoft.Web/Sites/', variables('siteName'))]"
          ],
          "properties": {
            "alwaysOn": true,
			"requestTracingEnabled": true,
			"requestTracingExpirationTime": "9999-12-31T23:59:00Z",
			"httpLoggingEnabled": true,
			"logsDirectorySizeLimit": 35,
			"detailedErrorLoggingEnabled": false,
            "IsManualIntegration": true
          }
        },
        {
          "apiVersion": "2018-02-01",
          "name": "web",
          "type": "sourcecontrols",
          "dependsOn": [
            "[resourceId('Microsoft.Web/Sites', variables('siteName'))]",
            "[concat('Microsoft.Web/Sites/', variables('siteName'), '/config/web')]"
          ],
          "properties": {
            "RepoUrl": "[variables('repoUrl')]",
            "branch": "[variables('branch')]",
            "IsManualIntegration": true
          }
        },
        {
          "apiVersion": "2018-02-01",
          "type": "config",
          "name": "logs",
          "dependsOn": [
            "[resourceId('Microsoft.Web/sites',variables('siteName'))]"
          ],
          "properties": {
			"applicationLogs": {
			  "fileSystem": {
				"level": "Off"
			  },
			  "azureTableStorage": {
				"level": "Off",
				"sasUrl": null
			  },
			  "azureBlobStorage": {
				"level": "Off",
				"sasUrl": null,
				"retentionInDays": null
			  }
			},
			"httpLogs": {
			  "fileSystem": {
				"retentionInMb": 35,
				"retentionInDays": 1,
				"enabled": true
			  },
			  "azureBlobStorage": {
				"sasUrl": null,
				"retentionInDays": 1,
				"enabled": false
			  }
			},
			"failedRequestsTracing": {
			  "enabled": true
			},
			"detailedErrorMessages": {
			  "enabled": false
			}
          }
        }
      ]
    }
  ]
}
